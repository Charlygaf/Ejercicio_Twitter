<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Usuarios</title>
</head>
<body>
    <div class="container">
      
       <div class="d-flex justify-content-between align-items-center">
            <h1>Lista de Usuarios</h1>
        
           <a href="http://localhost:3000/usuarios/crear" class="btn btn-success  ">Nuevo</a>
        
        </div> 
     <table class="table table-striped shadow">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Edad</th>
            <th class="text-center" scope="col">Acciones</th>
          </tr>
        </thead>
        <tbody>
            <% for (const user of listadeUsers) { %> 
          <tr>
            <th scope="row"> <%= user.id %></th>
            <td><%= user.firstname %></td>
            <td><%= user.lastname %></td>
            <td><%= user.age %></td>
            <td>
                <div class="d-flex justify-content-center align-items-center">
              <a href="/usuarios/editar/<%- user.id %>" class="btn btn-primary me-1">Editar</a>
              <form action="/usuarios/<%- user.id %>?_method=DELETE" method="POST"><button type="submit"  class="btn btn-danger">Eliminar</button></form>
            </td>
                </div>
            <% } %>
          </tr>
         
        </tbody>
      </table>
   
    </div>
</body>
</html>