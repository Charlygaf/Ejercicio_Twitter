<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <title>Registro</title>
    <%- include("./partials/headLinks") %>
  </head>
  <body class="bg-black">
    <!-- NAVBAR -->
    <div class="container">
      <div class="row">
        <div class="col-3">
          <!-- LEFT SIDEBAR -->
          <%- include ("./partials/leftSidebar") %>
        </div>
        <div class="col-5 border border-secondary border-top-0 border-bottom-0 p-0">
          <div class="container border border-secondary g-0 pb-2">
            <form action="" class="border-0 p-2">
              <textarea
                class="bg-black text-white border-0"
                placeholder="¿Qué está pasando?"
                id="floatingTextarea2"
                style="height: 100px"
                maxlength="280"
              ></textarea>
              <label class="d-0 d-none" for="floatingTextarea2">Twittea aquí</label>
            </form>
            <div class="footer border-top border-secondary d-flex justify-content-end">
              <button
                type="button"
                class="mt-2 btn btn-primary rounded-pill d-flex justify-content-end me-3"
              >
                Twittear
              </button>
            </div>
          </div>
        </div>
        <div class="col-4">
          <div class="news bg-secondary"><h2>Tendencias para ti</h2></div>
        </div>
      </div>
    </div>

    <!-- MODAL -->
    <!-- Modal -->
    <div
      class="modal fade"
      id="staticBackdrop"
      data-bs-backdrop="static"
      data-bs-keyboard="false"
      tabindex="-1"
      aria-labelledby="staticBackdropLabel"
      aria-hidden="true"
    >
      <%- include ("./partials/modal") %>
    </div>
    <!-- Optional JavaScript; choose one of the two! -->
    <script src="/js/app.js"></script>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
