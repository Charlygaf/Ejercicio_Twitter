<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <%- include("./partials/headLinks") %>
    <title>Registro</title>
  </head>
  <body style="background-color: black">
    <section class="h-100 h-custom">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-lg-8 col-xl-6">
            <div class="card rounded-3 bg-dark">
              <img
                src="https://ciphertrace.com/wp-content/uploads/2020/07/twitter-hack-1200x679.jpg"
                class="w-100"
                style="border-top-left-radius: 0.3rem; border-top-right-radius: 0.3rem"
                alt="Sample photo"
              />
              <div class="card-body p-4 p-md-5">
                <h3 class="mb-4 pb-2 pb-md-0 mb-md-3 px-md-2 text-white">Crear usuario</h3>

                <form id="registro" class="px-md-2" action="/registro" method="POST">
                  <div class="d-flex justify-content-between">
                    <div class="form-outline mb-2">
                      <label class="form-label text-white font-register" for="firstname"
                        >Nombre</label
                      >
                      <input
                        type="text"
                        id="firstname"
                        class="form-control rounded-pill"
                        name="firstname"
                        placeholder="Inserte su nombre aquí.."
                      />
                    </div>
                    <div class="form-outline mb-2">
                      <label class="form-label text-white font-register" for="lastname"
                        >Apellido</label
                      >
                      <input
                        type="text"
                        id="lastname"
                        class="form-control rounded-pill"
                        name="lastname"
                        placeholder="Inserte su apellido aquí.."
                      />
                    </div>
                  </div>
                  <div class="d-flex justify-content-between">
                    <div class="form-outline mb-2">
                      <label class="form-label text-white font-register" for="email">E-mail</label>
                      <input
                        type="email"
                        id="email"
                        class="form-control rounded-pill"
                        name="email"
                        placeholder="Inserte su email aquí.."
                      />
                    </div>
                    <div class="form-outline mb-2">
                      <label class="form-label font-register text-white me-5" for="birthDate"
                        >Fecha de nacimiento</label
                      >
                      <input
                        class="rounded-pill form-control mb-2"
                        type="date"
                        id="birthDate"
                        name="birthDate"
                      />
                    </div>
                  </div>
                  <div class="d-flex justify-content-between">
                    <div class="form-outline mb-2 text-white">
                      <label class="form-label font-register" for="userName">Username</label>
                      <div class="rounded-pill">
                        <input
                          type="text"
                          id="userName"
                          class="form-control rounded-pill"
                          name="userName"
                          placeholder="Inserte su usuario aquí.."
                        />
                      </div>
                    </div>
                    <div class="form-outline mb-2">
                      <label class="form-label text-white font-register" for="password"
                        >Contraseña</label
                      >
                      <input
                        type="password"
                        id="password"
                        class="form-control rounded-pill"
                        name="password"
                        placeholder="Inserte su contraseña aquí.."
                      />
                    </div>
                  </div>
                  <div class="d-flex justify-content-between">
                    <a href="/" class="font-register text-white mt-4 text-decoration-none">Home</a>
                    <button type="submit" class="btn btn-primary rounded-pill mt-4 font-register">
                      Registrarse
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Optional JavaScript; choose one of the two! -->
    <script src="/js/app.js"></script>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

