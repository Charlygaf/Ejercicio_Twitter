<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <%- include("partials/headLinks") %>

    <title></title>
  </head>
  <body class="bg-black text-white">
    <div class="container">
      <div class="row">
        <div class="col-3">
          <!-- LEFT SIDEBAR -->
          <%- include ("./partials/leftSidebar") %>
        </div>
        <div class="col-5 border-horizon-main p-0">
          <div class="ps-3 bg-nav sticky-top">
            <div class="d-flex justify-content-start align-items-center">
              <a class="text-decoration-none text-white me-3" href="/home"
                ><i class="fas fa-arrow-left"></i
              ></a>
              <div class="ps-4 py-1">
                <h1 class="fs-5 m-0"><%=user.firstname%> <%=user.lastname%></h1>
                <span class="text-secondary info-profile"><%=user.tweets.length%> Tweets</span>
              </div>
            </div>
          </div>
          <section class="border-bottom-section">
            <div class="ph-cover" style="background-image: url(/img/<%=user.photoCover%>)"></div>
            <div class="d-flex justify-content-end p-3 position-relative">
              <img
                class="rounded-circle w-25 ph-profile"
                src="/img/<%= user.photoProfile %> "
                alt="Photo Profile"
              />
              <a class="btn btn-outline-default rounded-pill height-fit px-3" href="#edit-profile"
                >Editar perfil</a
              >
            </div>
            <div class="p-3">
              <h2 class="fs-4 mb-0"><%=user.firstname%> <%=user.lastname%></h2>
              <p class="text-secondary fs-5 fw-light">@<%=user.userName%></p>
              <% if (user.biography) { %>
              <p><%=user.biography%></p>
              <% } %> <% if (user.birthDate) { %>
              <p class="text-secondary info-profile mb-0">
                <img src="/img/balloon.svg" alt="Baloon" style="width: 0.9rem" /> Fecha de
                nacimiento: <%=formatDate(new Date(user.birthDate), "dd 'de' MMMM 'de' Y"
                ,{locale:es})%>
              </p>
              <% } %>
              <p class="text-secondary info-profile mb-2">
                <img src="/img/calendar.svg" alt="Baloon" style="width: 0.9rem" /> Se uni√≥ en
                <%=formatDate(new Date(user.createdAt), "MMMM 'de' Y" ,{locale:es})%>
              </p>
              <a class="info-follow text-secondary" href="#"
                ><span><%=user.following.length%></span> Siguiendo</a
              >
              <a class="info-follow text-secondary ms-2" href="#"
                ><span><%=user.followers.length%></span> Siguidores</a
              >
            </div>
            <div class="d-flex justify-content-around">
              <a class="nav-info-profile text-secondary" href="#">Tweets</a>
              <a class="nav-info-profile text-secondary" href="#">Tweets y respuestas</a>
              <a class="nav-info-profile text-secondary" href="#">Fotos y videos</a>
              <a class="nav-info-profile text-secondary" href="#">Me gusta</a>
            </div>
          </section>
          <!-- tweet -->
          <%-include("partials/tweet")%>
        </div>
        <div class="col-3"><%- include ("partials/RightSidebar") %></div>
      </div>
    </div>
    <!-- Optional JavaScript; choose one of the two! -->
    <script src="/js/app.js"></script>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
